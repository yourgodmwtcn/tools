shell -$SHELL
term xterm-256color

# status bar
hardstatus on
hardstatus alwayslastline
#hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %Y-%m-%d %{W}%c:%s %{g}]'
#zombie ko
caption always "%{=r k}%{B}[%{k}Status:%{r} %?%h:None%?%{B}]%=[%{k}Load : %l%{B}]"

vbell off 
autodetach on # screen automatically detaches if connection is cut
# altscreen on
deflogin on
defscrollback 30000

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I" 
# tell screen how to set colors. AB = background, AF=foreground 
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' 
# erase background with current bg color 
defbce "on"

# activity message displayed when activity in monitored window 
activity "activity in %n (%t) [%w:%s]~"

#keybindings
bind ' ' windowlist -b # windowlist to space
#bind -k k1 select 1
#bind -k k2 select 2
#bind -k k3 select 3
#bind , prev
#bind . next

#startup stuff
startup_message off

screen -t matlab 1
chdir /home/poison/deepak/ROMS/runs/si/
screen -t ROMS-config 2
screen -t ROMS-run-1 3
screen -t ROMS-run-2 4
screen -t top  0  top
select 3

